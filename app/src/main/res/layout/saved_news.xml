<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSavedNewsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/gradient" />

        <ImageView
            android:id="@+id/heartOff"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/like" />

        <ImageView
            android:id="@+id/heartOn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="100dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/hearton" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImage"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvNumberOfLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="120dp"
            android:text="0"
            android:textColor="#FDFDFD"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:textColor="#000000"
        android:textSize="15dp"
        tools:text="description" />


    <ImageButton
        android:id="@+id/ibDeleteSavedNews"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/custom_saved_button"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <Button
        android:id="@+id/btnSavedNewsComment"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvDescription"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_saved_button"
        app:icon="@drawable/ic_baseline_add_comment_24" />


</RelativeLayout>